#: include kv/homescreen.kv
#: include kv/settingsscreen.kv
#: include kv/changeavatarscreen.kv
#: include kv/loginscreen.kv

GridLayout:
    cols: 1
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#091212")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        GridLayout:
            #put weather icons here
            rows: 1
            pos_hint:{"top": 1, "left": 1}
            size_hint: 1, .05
            Image:
                source: "icons/cloudy.png"
            Image:
                source: "icons/sunny.png"
        FloatLayout:
            #put 2 weather icons and avatar icon
            rows: 1
            pos_hint:{"top": .95, "left": 1}
            size_hint: 1, .15
            Image:
                source: "icons/racing.png"
                size_hint: 0.25, 0.5
                pos_hint: {"top": 1, "right":0.25}
            Image:
                source: "icons/man.png"
                id: avatar_image
                size_hint: 0.5, 1
                pos_hint: {"top": 1, "right": 0.75}

            Image:
                source: "icons/busstop.png"
                size_hint: 0.25, 0.5
                pos_hint: {"top": 1, "right": 1}
        ScreenManager:
            size_hint: 1, 0.799
            pos_hint: {"top": .799, "left":1}
            id: screen_manager
            LoginScreen:
                name: "login_screen"
                id: login_screen
            HomeScreen:
                name: "home_screen"
                id: home_screen
            SettingsScreen:
                name: "settings_screen"
                id: settings_screen
            ChangeAvatarScreen:
                name: "change_avatar_screen"
                id: change_avatar_screen

