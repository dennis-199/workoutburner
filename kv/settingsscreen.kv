
<SettingsScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#091212")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        Label:
            id: friend_id_label
            text: "your name will appear here"
            size_hint: 1, .1
            pos_hint: {"top": 1, "left": 1}
        ImageButton:
            size_hint: .5, .2
            pos_hint: {"top": .8, "left": 1}
            source: "icons/avatars/man.png"
            on_release:
                app.change_screen("change_avatar_screen")
        LabelButton:
            size_hint: .3, .2
            pos_hint: {"top": .8, "right": .8}
            text: "change avatar"
            on_release:
                app.change_screen("change_avatar_screen")
        ImageButton:
            size_hint: .5, .2
            pos_hint: {"top": .5, "left": 1}
            source: "icons/phone-call.png"
            on_release:
                print("Change phone number")
        LabelButton:
            size_hint: .3, .2
            pos_hint: {"top": .5, "right": .8}
            text: "change phone number"
            on_release:
                print("phone number changed")
        ImageButton:
            source: "icons/left-arrow.png"
            size_hint: .2, .15
            pos_hint: {"top": .2, "right": .2}
